{
    // VS Code Python Debugger Configuration for Odoo
    // 
    // PREREQUISITES:
    // 1. Odoo container must be running with debugpy installed and listening on port 5678
    // 2. Port 5678 must be exposed/forwarded to localhost:5678
    // 3. To start Odoo with debugger, add to docker-compose.yml or run:
    //    python -m debugpy --listen 0.0.0.0:5678 --wait-for-client /usr/bin/odoo
    //
    // CUSTOMIZING HOST/PORT:
    // - Set environment variables DEBUG_HOST and DEBUG_PORT before starting VS Code
    // - Example: export DEBUG_HOST=192.168.1.100 && export DEBUG_PORT=5679
    // - Or modify "host" and "port" values below directly
    //
    // See README.md "Debugging" section for complete setup instructions
    //
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Odoo",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "${env:DEBUG_HOST:localhost}",
                "port": "${env:DEBUG_PORT:5678}"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/mnt/extra-addons"
                },
                {
                    "localRoot": "${workspaceFolder}/odoo",
                    "remoteRoot": "/usr/lib/python3/dist-packages/odoo"
                }
            ],
            "justMyCode": false
        }
    ]
}
