# ============================================================================
# POSTGRESQL CONFIGURATION
# ============================================================================

# Main PostgreSQL superuser
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_super_secret

# Admin user for pgAdmin and manual administration
POSTGRES_ADMIN_PASSWORD=admin_secret_password

# Odoo database user (restricted - cannot drop databases)
POSTGRES_ODOO_PASSWORD=odoo_db_password

# n8n database user (restricted - cannot drop databases)
POSTGRES_N8N_PASSWORD=n8n_db_password

# Grafana database user (restricted - cannot drop databases)
POSTGRES_GRAFANA_PASSWORD=admin

# ============================================================================
# PGADMIN CONFIGURATION
# ============================================================================

PGADMIN_DEFAULT_EMAIL=admin@localhost.com
PGADMIN_DEFAULT_PASSWORD=pgadmin_password

# ============================================================================
# GRAFANA CONFIGURATION
# ============================================================================

GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=grafana_password

# ============================================================================
# PROMETHEUS CONFIGURATION
# ============================================================================

# No specific env vars needed for basic setup

# ============================================================================
# REQUIRED CONFIGURATION - Must be set before starting n8n
# ============================================================================

# n8n Security & Encryption
# CRITICAL: Generate secure keys using:
#   Linux/Mac: openssl rand -base64 32
#   Windows: [Convert]::ToBase64String((1..32 | ForEach-Object { Get-Random -Minimum 0 -Maximum 256 }))
N8N_ENCRYPTION_KEY=your-encryption-key-change-this
N8N_USER_MANAGEMENT_JWT_SECRET=your-jwt-secret-change-this

# Ollama Configuration (AI Integration)
OLLAMA_HOST=ollama:11434

# ============================================================================
# RECOMMENDED CONFIGURATION - Uncomment and configure as needed
# ============================================================================

# Task Runners (Performance Enhancement)
# Enables task runners for better performance. Will be default in future versions.
# N8N_RUNNERS_ENABLED=true

# Security Enhancements
# Controls whether Code Node can access environment variables
# Set to true for enhanced security (prevents env access from workflows)
# N8N_BLOCK_ENV_ACCESS_IN_NODE=false

# Disables bare repositories in Git Node for security
# N8N_GIT_NODE_DISABLE_BARE_REPOS=true

# Diagnostics & Telemetry
# Disable telemetry and personalization for privacy
# N8N_DIAGNOSTICS_ENABLED=false
# N8N_PERSONALIZATION_ENABLED=false

# ============================================================================
# ODOO INTEGRATION - Uncomment when integrating with Odoo
# ============================================================================

# Odoo API Configuration
# N8N_CUSTOM_EXTENSIONS=/data/custom-extensions
# ODOO_URL=http://odoo:8069
# ODOO_DB=odoo_db
# ODOO_USERNAME=admin
# ODOO_PASSWORD=admin

# ============================================================================
# ADVANCED n8n CONFIGURATION - For production/scaling scenarios
# ============================================================================

# Webhook Configuration
# N8N_WEBHOOK_URL=https://your-domain.com/
# N8N_PROTOCOL=https
# N8N_HOST=your-domain.com
# N8N_PORT=5678

# Queue Mode (for distributed/high-availability setups)
# QUEUE_BULL_REDIS_HOST=redis
# QUEUE_BULL_REDIS_PORT=6379
# QUEUE_BULL_REDIS_DB=0
# EXECUTIONS_MODE=queue

# External Storage (for large binary data)
# N8N_DEFAULT_BINARY_DATA_MODE=filesystem
# N8N_BINARY_DATA_STORAGE_PATH=/data/binary-data

# Execution Configuration
# EXECUTIONS_TIMEOUT=3600
# EXECUTIONS_TIMEOUT_MAX=7200
# EXECUTIONS_DATA_SAVE_ON_ERROR=all
# EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
# EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Logging
# N8N_LOG_LEVEL=info
# N8N_LOG_OUTPUT=console,file
# N8N_LOG_FILE_LOCATION=/data/logs

# SMTP Configuration (for email notifications and user management)
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=465
# N8N_SMTP_USER=your-email@gmail.com
# N8N_SMTP_PASS=your-app-password
# N8N_SMTP_SENDER=your-email@gmail.com
# N8N_SMTP_SSL=true

# User Management
# N8N_USER_MANAGEMENT_DISABLED=false
# N8N_USER_MANAGEMENT_JWT_DURATION_HOURS=168

# License (for n8n Enterprise features)
# N8N_LICENSE_TENANT_ID=
# N8N_LICENSE_ACTIVATION_KEY=

# ============================================================================
# QDRANT VECTOR DATABASE - For AI/RAG workflows
# ============================================================================

# Qdrant is already running at http://qdrant:6333
# No additional configuration needed for local setup
# QDRANT_URL=http://qdrant:6333
# QDRANT_API_KEY=

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================

# Enable detailed error messages
# N8N_DETAILED_ERROR_OUTPUT=true

# Disable production warnings
# NODE_ENV=development

# Enable workflow file watching (auto-reload on changes)
# N8N_SKIP_WEBHOOK_DEREGISTRATION_SHUTDOWN=true
